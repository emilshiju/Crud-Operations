
<div class="d-flex justify-content-between flex-wrap-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <h1 class="h2">Search</h1>

    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">+ new user</a>
        </div>
    </div>
</div>

<div class="table-responsive">
{{#if customers}}


<table class="table table-striped table-sm">
    {{#each customers}}
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">last Name</th>
            <th scope="col">password</th>
            <th scope="col">email</th>
        </tr>
    </thead>
    <tbody>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.password}}</td>
        <td>{{this.email}}</td>
          <td><div class="d-flex flex-row justify-content-end gap-2">

            <a href="/view/{{this._id}}" type="button" class="btn btn-primary btn-small">
            <i class="bi bi-eye"></i>
            </a>

            <a href="/edit/{{this._id}}" type="button" class="btn btn-warning btn-small">
            <i class="bi bi-pencil"></i>
            </a>

            <form action="/edit/{{this._id}}?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-danger btn-small">
                <i class="bi bi-person-x"></i>
            </button>
            </form>
        </div></td>
    </tbody>
    {{/each}}

</table>
    {{else}}
    <h2>No results</h2>
    {{/if}}
</div>